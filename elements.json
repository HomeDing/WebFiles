{
  "device": {
    "sys": "true",
    "properties": ["description", "room", "led", "reboottime"],
    "events": ["log", "loglevel"]
  },

  "ota": {
    "sys": "true",
    "properties": ["port", "passwd"]
  },
  "ssdp": {
    "sys": "true",
    "properties": ["Manufacturer", "ManufacturerURL", "ModelURL", "ModelNumber"]
  },

  "ntptime": {
    "sys": "true",
    "properties": ["ntpserver", "zone", "readtime"]
  },

  "dstime": {
    "sys": "true",
    "properties": ["address", "time", "readtime"]
  },

  "displayadapterlcd": {
    "sys": "true"
  },
  "displayadapterssd1306": {
    "sys": "true"
  },
  "displayadaptersh1106": {
    "sys": "true"
  },

  "displaytext": {
    "sys": "false",
    "properties": ["description", "loglevel", "x", "y", "fontsize", "prefix", "postfix"],
    "events": ["value", "clear"],
    "actions": []
  },

  "displaydot": {
    "sys": "false",
    "properties": ["description", "loglevel", "x", "y"],
    "events": ["value", "clear"],
    "actions": []
  },

  "time": {
    "sys": "true",
    "properties": ["description", "loglevel"],
    "events": [],
    "actions": ["onminute", "ontimestamp", "ontime", "ondate"]
  },

  "analog": {
    "properties": ["description", "loglevel", "readtime", "hysteresis", "reference"],
    "events": [],
    "actions": ["onvalue", "onreference"]
  },

  "button": {
    "properties": ["description", "pin", "type", "inverse", "pullup"],
    "events": ["value"],
    "actions": ["onvalue", "onon", "onoff"]
  },

  "rotary": {
    "properties": ["description", "pin1", "pin2", "step", "value"],
    "events": [],
    "actions": ["onchange"]
  },

  "serialcmd": {
    "properties": ["description"],
    "events": [],
    "actions": ["preset0", "preset1", "preset2", "preset3"]
  },

  "timer": {
    "properties": ["description", "type", "waittime", "pulsetime", "cycletime"],
    "events": ["start", "stop", "next"],
    "actions": ["onon", "onoff", "onvalue"]
  },

  "digitalin": {
    "properties": ["description", "pin", "inverse", "pullup"],
    "events": [],
    "actions": ["onValue", "onHigh", "onLow"]
  },

  "switch": {
    "properties": ["description"],
    "events": ["value", "toggle"],
    "actions": ["onValue", "onHigh", "onLow"]
  },

  "digitalout": {
    "properties": ["description", "value", "pin", "inverse"],
    "events": ["on", "off", "value"],
    "actions": []
  },

  "pwmout": {
    "properties": ["description", "value", "range", "pin", "inverse"],
    "events": ["on", "off", "value"],
    "actions": []
  },

  "schedule": {
    "properties": ["description", "loglevel", "ontime", "offtime"],
    "events": [],
    "actions": ["onon", "onoff", "onvalue"]
  }

}