{
  "name": "homedingnode",
  "version": "1.0.1",
  "description": "Node based emulator of a HomeDing embedded web server",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/HomeDing/WebFiles.git"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "multer": "^1.4.2",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "html-minifier": "^3.5.21",
    "node-sass": "^4.12.0",
    "uglify-js": "^3.6.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "node-sass iotstyle.scss iotstyle.css --output-style compact",
    "build:css-watch": "npm run build:css -- -w",
    "build:css-min": "node-sass iotstyle.scss iotstyle.min.css --output-style compressed",
    "build:ts": "tsc",
    "build:ts-watch": "tsc -w",
    "build": "npm run build:ts && npm run build:css",
    "build:watch": "concurrently \"tsc -w\" \"npm run build:css -- -w\"",
    "prestart": "npm run build",
    "start": "node server.js",
    "min-setup": "html-minifier --collapse-whitespace --remove-tag-whitespace --remove-comments --minify-css true --minify-js true --quote-character ' setup.htm -o setup.min.htm",
    "min-upload": "html-minifier --collapse-whitespace --remove-tag-whitespace --remove-comments --minify-css true --minify-js true --quote-character ' upload.htm -o upload.min.htm",
    "min-boot": "html-minifier --collapse-whitespace --remove-tag-whitespace --remove-comments --minify-css true --minify-js true --quote-character ' boot.htm -o boot.min.htm",
    "min-index": "html-minifier --collapse-whitespace --remove-tag-whitespace --remove-comments --minify-css true --minify-js true --quote-character ' min-index.htm -o min-index.min.htm",
    "min-micro": "uglifyjs micro.js -o micro.min.js -m",
    "min-ide": "uglifyjs ding-ide.js -o ding-ide.min.js",
    "min-ide-2": "uglifyjs ding-ide.js -m toplevel -c -o ding-ide.min.js"
  },
  "keywords": [
    "IoT",
    "Arduino",
    "ESP8266",
    "HomeDing",
    "HomeDingNode",
    "node.js",
    "iot",
    "webserver"
  ],
  "author": "Matthias Hertel",
  "license": "BSD-3-Clause"
}
