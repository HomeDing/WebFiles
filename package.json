{
  "name": "homedingnode",
  "version": "1.2.0",
  "description": "Node based Portal for HomeDing devices on the local network",
  "main": "app.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/HomeDing/WebFiles.git"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "express": "^4.18.1",
    "html-minifier-terser": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "multicast-dns": "^7.2.3",
    "node-fetch": "^3.2.10",
    "terser": "^5.14.2",
    "timeout-signal": "^1.1.0",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/multer": "^1.4.7",
    "@types/multicast-dns": "^7.2.1",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-promise": "^2.0.2",
    "eslint-config-standard": "^17.0.0",
    "sass": "^1.54.5",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "stylelint": "^14.11.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "svgstore": "^3.0.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "test:ts": "eslint src\\*.ts",
    "test:server": "eslint server\\*.ts",
    "test:css": "stylelint *.scss css/*.scss",
    "test": "npm outdated && npm run test:ts && npm run test:server && npm run test:css",
    "clean": "shx rm -rf dist && shx rm -rf dist-mini",
    "build:css": "sass iotstyle.scss iotstyle.css",
    "build:css-watch": "npm run build:css -- -w",
    "build:server": "tsc -p server",
    "build:ts": "tsc -p src",
    "build:ts-watch": "npm run build:ts -- -w",
    "xprebuild": "npm run test",
    "build": "npm run build:ts && npm run build:css && npm run build:server",
    "pack:dist": "node packdist.js",
    "pack:minimal": "node packminimal.js",
    "pack:icons": "node packicons.js",
    "pack:embed": "node packembedweb.js",
    "pack": "npm run pack:icons && npm run pack:dist && npm run pack:minimal && npm run pack:embed",
    "publish:doku": "cmd /C publishDoku.bat",
    "publish:webfiles": "cmd /C publishWebFiles.bat v09",
    "publish": "npm run publish:doku && npm run publish:webfiles",
    "prestart": "npm run build",
    "start": "node app.js"
  },
  "files": [
    "dist",
    "dist-mini",
    "upload.h"
  ],
  "keywords": [
    "IoT",
    "Arduino",
    "ESP8266",
    "HomeDing",
    "HomeDingPortal",
    "HomeDingNode",
    "node.js",
    "iot",
    "webserver"
  ],
  "homepage": "https://homeding.github.io/",
  "bugs": {
    "url": "https://github.com/HomeDing/WebFiles/issues"
  },
  "author": "Matthias Hertel",
  "license": "BSD-3-Clause"
}
