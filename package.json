{
  "name": "homedingnode",
  "version": "1.0.1",
  "description": "Node based emulator of a HomeDing embedded web server",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/HomeDing/WebFiles.git"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "mdns-js": "^1.0.3",
    "multer": "^1.4.2",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "html-minifier": "^3.5.21",
    "node-sass": "^4.14.1",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "typescript": "^3.8.3",
    "uglify-js": "^3.9.2"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "shx rm -rf dist",
    "build:css": "node-sass iotstyle.scss iotstyle.css --output-style compact",
    "build:css-watch": "npm run build:css -- -w",
    "build:ts": "tsc",
    "build:ts-watch": "npm run build:ts -- -w",
    "build": "npm run build:ts && npm run build:css",
    "pack:dist": "node makedist.js",
    "pack:embed": "node makeembedweb.js",
    "pack": "npm run pack:dist && npm run pack:embed",
    "prestart": "npm run build",
    "start": "node server.js"
  },
  "keywords": [
    "IoT",
    "Arduino",
    "ESP8266",
    "HomeDing",
    "HomeDingNode",
    "node.js",
    "iot",
    "webserver"
  ],
  "author": "Matthias Hertel",
  "license": "BSD-3-Clause"
}
