{
  "name": "homedingnode",
  "version": "1.0.1",
  "description": "Node based emulator of a HomeDing embedded web server",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/HomeDing/WebFiles.git"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "multer": "^1.4.2",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "shelljs": "^0.8.3",
    "rimraf": "^3.0.0",
    "html-minifier": "^3.5.21",
    "node-sass": "^4.12.0",
    "typescript": "^3.6.4",
    "uglify-js": "^3.6.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",

    "build:css": "node-sass iotstyle.scss iotstyle.css --output-style compact",
    "build:css-min": "node-sass iotstyle.scss mindist/iotstyle.css --output-style compressed",
    "build:css-watch": "npm run build:css -- -w",
    "build:ts": "tsc",
    "build:ts-watch": "npm run build:ts -- -w",
    "build": "npm run build:ts && npm run build:css",

    "pack:dist": "node makedist.js",
    "pack:embed": "node makeembedweb.js",
    "pack": "npm run pack:dist && npm run pack:embed",

    "prestart": "npm run build",
    "start": "node server.js",

    "min-index": "html-minifier --collapse-whitespace --remove-tag-whitespace --remove-comments --minify-css true --minify-js true --quote-character ' min-index.htm -o min-index.min.htm",
    "min-ide-htm": "html-minifier --collapse-whitespace --remove-tag-whitespace --remove-comments --minify-css true --minify-js true --quote-character ' ding-ide.htm -o mindist/ding-ide.htm",
    "min-templates-htm": "html-minifier --collapse-whitespace --remove-tag-whitespace --remove-comments --minify-css true --minify-js true --quote-character ' ding-templates.htm -o mindist/ding-templates.htm",
    "min-board-htm": "html-minifier --collapse-whitespace --remove-tag-whitespace --remove-comments --minify-css true --minify-js true --quote-character ' board.htm -o mindist/board.htm",
    "min-micro": "uglifyjs micro.js -c -o mindist/micro.js -m",
    "min-ide": "uglifyjs ding-ide.js -c -o mindist/ding-ide.js"
  },
  "keywords": [
    "IoT",
    "Arduino",
    "ESP8266",
    "HomeDing",
    "HomeDingNode",
    "node.js",
    "iot",
    "webserver"
  ],
  "author": "Matthias Hertel",
  "license": "BSD-3-Clause"
}
