{
  "timer": {
    "blink": {
      "type": "LOOP",
      "waittime": "80m",
      "pulsetime": "10m",
      "cycletime": "100m",

      "onon": "digitalout/relais?on,device/main?log=*on*",
      "onoff": "digitalout/relais?off,device/main?log=*off*",
      "description": "Water Timer"
    }
  },

  "dht": {
    "on": {
      "description": "Local DHT sensor",
      "pin": "D4",
      "type": "DHT22",
      "readtime": "30s",
      "resendtime": "2m",
      "onTemperature": "remote/display-t?show=$v",
      "onHumidity": "remote/display-h?show=$v"
    }
  },

  "rfsend": {
    "i1": {
      "pin": "D4",
      "codeOn": "s_#_###__#_#__#_##_#_###_#__#____x",
      "codeOff": "s_#_###__#_#__#_##_#_###_#_______x",
      "description": "Switch fan."
    },
    "i2": {
      "pin": "D4",
      "codeOn": "s_#_###__#_#__#_##_#_###_#__#___#x",
      "codeOff": "s_#_###__#_#__#_##_#_###_#______#x",
      "description": "Switch light."
    },
    "i3": {
      "pin": "D4",
      "codeOn": "s_#_###__#_#__#_##_#_###_#__#__#_x",
      "codeOff": "s_#_###__#_#__#_##_#_###_#_____#_x",
      "description": "Send out specifc RF signal"
    }
  },

  "digitalout": {
    "relais": {
      "pin": 2,
      "invers": "true",
      "description": "Relais on Port GPIO2"
    }
  }
}