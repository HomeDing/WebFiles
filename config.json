{
  "displaytext": {
    "date": {
      "type": "TEXT",
      "x": 0,
      "y": 0,
      "description": "show the date"
    },

    "time": {
      "type": "TEXT",
      "x": 0,
      "y": 16,
      "fontsize": 16,
      "description": "show the time"
    }
  },

  "rfsend": {
    "i3": {
      "pin": "D4",
      "codeOn": "s_#_###__#_#__#_##_#_###_#__#__#_x",
      "codeOff": "s_#_###__#_#__#_##_#_###_#_____#_x",
      "description": "Send out specifc RF signal"
    }
  },

  "time": {
    "0": {
      "ondate": "displaytext/date?show=$v",
      "ontime": "displaytext/time?show=$v"
    }
  },

  "displaydot": {
    "b": {
      "x": 110,
      "y": 8,
      "description": "Display a bink"
    }
  },

  "dht": {
    "on": {
      "description": "Local DHT sensor",
      "pin": "D4",
      "type": "DHT22",
      "readtime": "30s",
      "resendtime": "2m",
      "onTemperature": "device/0?log=temp:$v,remote/display-t?show=$v",
      "T": "displaytext/temp?show=$v,",
      "onHumidity": "device/0?log=hum:$v%,remote/display-h?show=$v",
      "H": "displaytext/hum?show=$v,"
    }
  },

  "timer": {
    "water": {
      "type": "LOOP",
      "waittime": "1s",
      "pulsetime": "4s",
      "cycletime": "12s",
      "onon": "digitalout/relais?on,device/0?log=on",
      "onoff": "digitalout/relais?off,device/0?log=off",
      "description": "Water timing"
    }
  },

  "schedule": {
    "0": {
      "onTime": "22:05:00",
      "offTime": "22:05:30",
      "onon": "device/0?log=switch on,displaydot/b?show=1",
      "onoff": "device/0?log=switch off,displaydot/b?show=0"
    }
  }

}