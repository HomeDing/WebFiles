{
  "displaytext": {
    "date": {
      "type": "TEXT",
      "x": 0,
      "y": 0,
      "description": "show the date"
    },

    "time": {
      "type": "TEXT",
      "x": 0,
      "y": 16,
      "fontsize": 16,
      "description": "show the time"
    }
  },

  "ntptime": {
    "on": {
      "readtime": "2m",
